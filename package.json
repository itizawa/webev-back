{
  "name": "webev-back",
  "version": "0.3.6",
  "main": "index.js",
  "repository": "https://github.com/itizawa/webev-back.git",
  "author": "itizawa <itizawa.pen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc",
    "dev": "env-cmd -f ./config/dev.env nodemon -x ts-node src/main.ts",
    "lint": "eslint src/**/**.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "deploy": "tsc && gcloud app deploy"
  },
  "dependencies": {
    "@slack/webhook": "^6.0.0",
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.5",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "jest-date-mock": "^1.0.8",
    "mongodb": "^3.6.9",
    "mongoose": "^5.12.13",
    "mongoose-paginate-v2": "^1.3.18",
    "socket.io": "^4.1.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/mongodb": "^3.1.18",
    "@types/node": "^15.12.1",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.14.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
