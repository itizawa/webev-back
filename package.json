{
  "name": "webev-back",
  "version": "0.3.5",
  "main": "index.js",
  "repository": "https://github.com/itizawa/webev-back.git",
  "author": "itizawa <itizawa.pen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc",
    "dev": "env-cmd -f ./config/dev.env nodemon -x ts-node src/main.ts",
    "lint": "eslint src/**/**.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "deploy": "tsc && gcloud app deploy"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.5",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "jest-date-mock": "^1.0.8",
    "mongodb": "^3.6.9",
    "mongoose": "^5.12.12",
    "mongoose-paginate-v2": "^1.3.18",
    "socket.io": "^4.0.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/mongodb": "^3.1.18",
    "@types/node": "^14.14.37",
    "@types/socket.io": "^2.1.13",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
